extends layout

block content
  .authModal(id="root")

  script.
    var lock = new Auth0Lock('#{env.AUTH0_CLIENT_ID}', '#{env.AUTH0_DOMAIN}',
      {
        auth: {
          oidcConformant: true,
          redirectUrl: '#{env.AUTH0_CALLBACK_URL}',
          params: {
            audience: 'https://#{env.AUTH0_DOMAIN}/userinfo',
            scope: 'openid profile'
          }
        }
      });
    lock.show();
